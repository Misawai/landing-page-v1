.home-link > img
  border-radius: 50%

.custom-block
  &.col-wrapper
    @media (min-width: 992px)
      &
        display flex

  &.col-full
    width 100%

    @media (min-width: 992px)
      &
        flex 0 0 100%
        max-width 100%

  &.col-pic
    width 100%
    @media (min-width: 500px)
      &
        width 70%
        flex 0 0 20%
        max-width 70%
        padding 0 5% 0 0

  &.col-word
    width 100%

    @media (min-width: 500px)
      &
        flex 0 0 80%
        max-width 80%

  &.col-half
    width 100%
    padding 0 5px 0 20px

    @media (min-width: 992px)
      &
        flex 0 0 50%
        max-width 50%

  &.col-third
    width 100%
    padding 0 3px 0 3px

    @media (min-width: 992px)
      &
        flex 0 0 33.333333%
        max-width 33.333333%
